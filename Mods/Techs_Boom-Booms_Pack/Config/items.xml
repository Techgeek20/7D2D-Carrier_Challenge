					<passive_effect name="BlockDamage"  operation="perc_add" value=".2"/>
					<passive_effect name="DismemberChance" operation="base_add" value=".1"/>
			</effect_group>
			<effect_group tiered="false" name="workaround for explosives ignoring perks/buffs">
